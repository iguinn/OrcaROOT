include ../buildTools/config.mk

SHLIB = libORUtil.$(SOSUFFIX)
    
SOURCES = $(wildcard OR*.cc)
HEADERS = $(wildcard OR*.hh)
OBJECTS = $(SOURCES:.cc=.o)

ORFLAGS = 
ORLIBS =

all: depend $(SHLIB)

.depend depend:
	@echo Checking dependencies...
	@$(CXX) -M $(CXXFLAGS) ${ROOTFLAGS} $(ORFLAGS) *.cc > .depend

$(SHLIB): $(OBJECTS) 
	$(SOMAKER) $(SOFLAGS) -o $(SHLIB) $(OBJECTS) $(ORLIBS) $(ROOTLIBS)

.cc.o: 
	$(CXX) $(CXXFLAGS) $(ORFLAGS) $(ROOTFLAGS) -c $<

clean:
	rm -f $(SHLIB) *.o *~ .depend

ifneq ($(MAKECMDGOALS), clean)
-include .depend
endif

