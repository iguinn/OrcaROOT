include ../buildTools/config.mk

SHLIB = libORManagement.$(SOSUFFIX)
    
SOURCES = $(wildcard OR*.cc)
HEADERS = $(wildcard OR*.hh)
OBJECTS = $(SOURCES:.cc=.o)

ORFLAGS = -I../Util -I../Decoders -I../IO -I../Processors
ORLIBS = -L../lib -lORUtil -lORDecoders -lORIO -lORProcessors

all: depend $(SHLIB)

.depend depend:
	@echo Checking dependencies...
	@g++ -M $(CXXFLAGS) ${ROOTFLAGS} $(ORFLAGS) *.cc > .depend

$(SHLIB): $(OBJECTS) 
	$(SOMAKER) $(SOFLAGS) -o $(SHLIB) $(OBJECTS) $(ORLIBS) $(ROOTLIBS)

.cc.o: 
	$(CXX) $(CXXFLAGS) $(ROOTFLAGS) $(ORFLAGS) -c $<

clean:
	rm -f $(SHLIB) *.o *~ .depend

ifneq ($(MAKECMDGOALS), clean)
-include .depend
endif

